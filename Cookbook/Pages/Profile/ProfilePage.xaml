<Page x:Class="Cookbook.Pages.Profile.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Cookbook.Pages.Profile"
      mc:Ignorable="d"
      Title="ProfilePage">
    <Grid>
        
        <WrapPanel ItemWidth="160" HorizontalAlignment="Center" VerticalAlignment="Center">
            
            <Border Name="CircularBorder" BorderThickness="1" BorderBrush="White" CornerRadius="{Binding ActualHeight, ElementName=CircularBorder}">
                <Ellipse Width="150" Height="150">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="{Binding ImagePath}"></ImageBrush>
                    </Ellipse.Fill>
                </Ellipse>
            </Border>

            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding Name, FallbackValue=Guest}"></TextBlock>
            </StackPanel>
            
        </WrapPanel>
        
    </Grid>
</Page>
