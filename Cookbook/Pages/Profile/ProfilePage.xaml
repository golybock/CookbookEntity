<Page x:Class="Cookbook.Pages.Profile.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Cookbook.Pages.Profile"
      mc:Ignorable="d"
      Title="ProfilePage">
    <Grid Background="Aqua">
        <WrapPanel ItemWidth="160" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Width="150" Height="150" Source="{Binding ImagePath}"></Image>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Aboba"></TextBlock>
            </StackPanel>
        </WrapPanel>
    </Grid>
</Page>
