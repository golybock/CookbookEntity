<Page x:Class="Cookbook.Pages.RecipesPage.RecipesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Cookbook.Pages.RecipesPage"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      mc:Ignorable="d"
      Title="RecipesPage">
    <Grid>
        <ListBox Name="RecipesListBox">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="1" BorderBrush="Black" CornerRadius="4" Background="LightGray">
                        <WrapPanel ItemHeight="80" ItemWidth="120" VerticalAlignment="Center" HorizontalAlignment="Left">
                            <Image Height="50" Width="50" Source="{Binding ImagePath, FallbackValue=../../Resources/not_found_image.png}"></Image>
                            <TextBlock TextWrapping="Wrap" Text="{Binding Description}"></TextBlock>
                        </WrapPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        

        
    </Grid>
</Page>
